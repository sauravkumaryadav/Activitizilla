
 <%- include("partials/header"); -%> 


<h1 style="text-align:center;color:crimson;margin-top:30px;text-shadow: 2px 2px 5px red;"><%=title%></h1>
<p style="text-align: center;margin:30px 30px;background-image: url(https://storage.needpix.com/rsynced_images/background-4232859_1280.png);background-size: cover;overflow-wrap: break-word;"><%=content%></p>

<form action="/blogdelete" method="POST">
<button type="submit" name="delete" value="<%= title%>" class="btn btn-md btn-primary" style="margin-left:auto;margin-right:auto;display:block;margin-top:2%;margin-bottom:0%">Delete it!</button>  
<input type="hidden" name="titleName" value="<%= title %>"></input>
<input type="hidden" name="contentData" value="<%= content %>"></input>
<input type="hidden" name="userId" value="<%= userId %>"></input>
<input type="hidden" name="postId" value="<%= _id %>"></input>
</form>
<p style="color:black;margin-top:20px;"><%= data %></p>

